<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectOneBrettN"
        >

        <!-- Register the SmsAgreement activity -->
        <activity
            android:name=".SmsAgreement"
            android:exported="false" />

        <!-- Register the AddEvent activity -->
        <activity
            android:name=".AddEvent"
            android:label="Add Event"
            android:parentActivityName=".data_grid"
            android:exported="false" />

        <!-- Register the data_grid activity -->
        <activity
            android:name=".data_grid"
            android:exported="false"
            android:label="Data Grid" />

        <!-- Register the ActivityRegister activity -->
        <activity
            android:name=".ActivityRegister"
            android:label="Register"
            android:exported="false" />

        <!-- MainActivity that starts the app -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>